{
  "name": "matryoshka-rlm",
  "version": "0.2.3",
  "type": "module",
  "description": "Recursive Language Model - Process documents larger than LLM context windows",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "bin": {
    "rlm": "dist/index.js",
    "rlm-mcp": "dist/mcp-server.js",
    "lattice-mcp": "dist/lattice-mcp-server.js",
    "lattice-repl": "dist/repl/lattice-repl.js",
    "lattice-pipe": "dist/tool/adapters/pipe.js",
    "lattice-http": "dist/tool/adapters/http.js",
    "lattice-setup": "dist/scripts/setup-claude-code.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "default": "./dist/lib.js"
    },
    "./rlm": {
      "types": "./dist/rlm.d.ts",
      "default": "./dist/rlm.js"
    },
    "./server": {
      "types": "./dist/mcp-server.d.ts",
      "default": "./dist/mcp-server.js"
    },
    "./engine": {
      "types": "./dist/engine/index.d.ts",
      "default": "./dist/engine/index.js"
    },
    "./repl": {
      "types": "./dist/repl/index.d.ts",
      "default": "./dist/repl/index.js"
    },
    "./tool": {
      "types": "./dist/tool/index.d.ts",
      "default": "./dist/tool/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "config.example.json"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "mcp": "tsx src/mcp-server.ts",
    "repl": "tsx src/repl/lattice-repl.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "llm",
    "rlm",
    "mcp",
    "claude",
    "document-analysis",
    "recursive",
    "context-window",
    "model-context-protocol"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yogthos/Matryoshka.git"
  },
  "homepage": "https://github.com/yogthos/Matryoshka#readme",
  "bugs": {
    "url": "https://github.com/yogthos/Matryoshka/issues"
  },
  "author": "yogthos",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2",
    "ramo": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
